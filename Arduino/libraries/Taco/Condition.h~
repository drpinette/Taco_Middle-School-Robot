enum Comparison {EqualTo, NotEqualTo, GreateThan, GreaterThanOrEqualTo, LessThan, LessThanOrEqualTo};

class Condition
{
public:
    ICondition(){}
    virtual ~ICondition(){}
    virtual bool test()=0;
    bool Compare(Comparison, float, float);
};

class DistanceFor : public Condition
{
public:
  DistanceFor(Sonar* sonar, Comparison operator, float thresholdDistance);
  bool test();
};

class All : public Condition
{
public:
  All(Condition*[] conditions);
  bool test();
};

class Any : public Condition
{
public:
  Any(Condition*[] conditions);
  bool test();
};

